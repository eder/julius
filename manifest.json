{
    "name": "Julius Layer",
    "description": "This app puts an image layer over your HTML. Use it to compare the layout with the current page.",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "tabs", "http://*/*", "https://*/*",
        "storage"
    ],
    "browser_action": {
        "default_title": "Put URL image",
        "default_icon": "julius-16.png",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
       "images/bg-popup.png"
    ],
    "icons": { "16": "julius-16.png", "128": "julius-128.png" }
}
